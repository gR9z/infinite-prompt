{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "next/core-web-vitals"
  ],
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": ["error", { "semi": true, "singleQuote": true }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}
